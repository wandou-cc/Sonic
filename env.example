# Sonic链项目环境变量配置

# 私钥配置 (不要提交真实私钥到代码库)
PRIVATE_KEY=your_private_key_here

# Sonic网络配置
SONIC_RPC_URL=https://rpc.soniclabs.com
SONIC_TESTNET_RPC_URL=https://rpc.blaze.soniclabs.com

# 区块链浏览器API密钥 (如果需要验证合约)
SONIC_API_KEY=your_sonic_api_key_here
SONIC_TESTNET_API_KEY=your_sonic_testnet_api_key_here

# Gas报告配置
REPORT_GAS=false
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# 合约参数配置
CONTRACT_NAME="QR Code NFT"
CONTRACT_SYMBOL="QRNFT"
MINT_FEE_ETHER=0.01

# IPFS配置 (用于存储元数据)
IPFS_API_URL=https://api.pinata.cloud
IPFS_API_KEY=your_pinata_api_key_here
IPFS_SECRET_KEY=your_pinata_secret_key_here

# 前端配置
NEXT_PUBLIC_CONTRACT_ADDRESS=
NEXT_PUBLIC_NETWORK_ID=146
NEXT_PUBLIC_NETWORK_NAME=Sonic

# 开发模式配置
NODE_ENV=development
DEBUG=true

# 数据库配置 (用于后端服务)
MONGODB_URI=mongodb://localhost:27017/qr-nft-sonic
REDIS_URL=redis://localhost:6379

# JWT配置
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# 邮件服务配置 (如果需要)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# 日志级别
LOG_LEVEL=info 