{
  "name": "qr-nft-sonic",
  "version": "1.0.0",
  "description": "QR Code NFT project on Sonic blockchain - 基于Sonic链的二维码NFT项目",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:testnet": "hardhat run scripts/deploy.js --network sonic-testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network sonic",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify:testnet": "hardhat verify --network sonic-testnet",
    "verify:mainnet": "hardhat verify --network sonic",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "analyze": "slither contracts/",
    "flatten": "hardhat flatten",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "send": "hardhat send"
  },
  "keywords": [
    "NFT",
    "QR Code",
    "Sonic",
    "Blockchain",
    "Smart Contract",
    "ERC721",
    "Web3",
    "DeFi"
  ],
  "author": "QR-NFT Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.1",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/qr-nft-sonic.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/qr-nft-sonic/issues"
  },
  "homepage": "https://github.com/your-username/qr-nft-sonic#readme"
} 